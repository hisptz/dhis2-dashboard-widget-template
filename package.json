{
  "name": "dhis2-dashboard-widget-template",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "proxy": "ts-node-esm proxy.ts",
    "widget": "vite dev",
    "dev": "concurrently -n 'proxy|widget' --name-separator='|' 'yarn proxy' 'wait-on http://localhost:8080 && yarn widget'",
    "build": "tsc && vite build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview"
  },
  "developer": {
    "name": "Hisp Tanzania",
    "url": "https://hisptanzania.org"
  },
  "icons": {
    "16": "favicon-16x16.png",
    "32": "favicon-32x32.png",
    "48": "dhis2-app-icon.png"
  },
  "manifest.webapp": {
    "name": "DHIS2 Dashboard Widget",
    "description": "A template to bootstrap a DHIS2 dashboard widget",
    "appType": "DASHBOARD_WIDGET",
    "activities": {
      "dhis": {
        "href": "*"
      }
    }
  },
  "dependencies": {
    "@dhis2/app-runtime": "^3.9.4",
    "@dhis2/ui": "^8.15.1",
    "concurrently": "^8.2.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "wait-on": "^7.2.0"
  },
  "devDependencies": {
    "@types/http-proxy": "^1.17.14",
    "@types/react": "^18.2.37",
    "@types/react-dom": "^18.2.15",
    "@typescript-eslint/eslint-plugin": "^6.10.0",
    "@typescript-eslint/parser": "^6.10.0",
    "@vitejs/plugin-react": "^4.2.0",
    "dotenv": "^16.3.1",
    "eslint": "^8.53.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.4",
    "http-proxy": "^1.18.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2",
    "vite": "^5.0.0"
  }
}
